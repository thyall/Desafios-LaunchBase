{% extends "layout.njk" %}

{% block head %}
    <title>{{item.title}}</title>
{% endblock %}

{% block content %}
    <div id = "wrapper">
        <h1>{{item.title}}</h1>
    </div>

    <section class="curso">

        <div class="card" id={{item.id}}>
            <div class="curso_video-container">
                <iframe src="https://www.rocketseat.com.br/{{item.id}}" frameborder="0"></iframe>
            </div>           

            <div class="curso_content">
                <p>{{item.title}}</p>
            </div>
            <div class="curso_info">
                <p>{{item.modulos}}</p>
                <p class="curso_price">{{item.price}}</p>
            </div>
        </div>

    </section>

{% endblock %}