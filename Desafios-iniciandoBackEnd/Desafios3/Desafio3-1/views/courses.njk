{% extends "layout.njk" %}

{% block head %}
    <title>Cursos-Thyall D'greville</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
        rel="stylesheet">
{% endblock %}

{% block content %}
    <div id = "wrapper">
        <h1>Cursos</h1>
    </div>

    <section class="cursos">
        <div class="curso" id="starter">
            <div class="curso_image">
                <img src="https://storage.googleapis.com/golden-wind/bootcamp-launchbase/assets/starter.svg" alt="Logo">
            </div>
            <div class="curso_content">
                <p>Starter</p>
            </div>
            <div class="curso_info">
                <p>5 Módulos</p>
                <p class="curso_price">Free</p>
            </div>
        </div>

        <div class="curso" id="launchbase">
            <div class="curso_image">
                <img src="https://storage.googleapis.com/golden-wind/bootcamp-launchbase/assets/launchbase.svg" alt="Logo">
            </div>
            <div class="curso_content">
                <p>LaunchBase</p>
            </div>
            <div class="curso_info">
                <p>8 Módulos</p>
                <p class="curso_price">Pago</p>
            </div>
        </div>

        <div class="curso" , id="gostack">
            <div class="curso_image">
                <img src="https://storage.googleapis.com/golden-wind/bootcamp-launchbase/assets/gostack.svg" alt="Logo">
            </div>
            <div class="curso_content">
                <p>GoStack</p>
            </div>
            <div class="curso_info">
                <p>A definir</p>
                <p class="curso_price">Pago</p>
            </div>
        </div>
    </section>

    <div class="modal-overlay">
        <div class="modal">
            <a class="close-modal">
                <i class="material-icons">close</i>
            </a> 
            
            <a class="maximize-modal">
                <i class="material-icons">maximize </i>
                </a>

            <div class="modal-content">
                <iframe src="" frameborder="0"></iframe>
            </div>
        </div>
    </div>

    <script src="/assets/scripts.js"></script>

{% endblock %}