{% extends "layout.njk" %}

{% block head %}
    <title>Cursos-Thyall D'greville</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
        rel="stylesheet">
{% endblock %}

{% block content %}
    <div id = "wrapper">
        <h1>Cursos</h1>
    </div>

    <section class="cursos">
        
        {% for item in  items %}
        <div class="curso" id={{item.id}}>
            <div class="curso_image">
                <img src="https://storage.googleapis.com/golden-wind/bootcamp-launchbase/assets/{{item.id}}.svg" alt="Imagem de {{item.id}}">
            </div>
            <div class="curso_content">
                <p>{{item.title}}</p>
            </div>
            <div class="curso_info">
                <p>{{item.modulos}}</p>
                <p class="curso_price">{{item.price}}</p>
            </div>
        </div>
        {% endfor %}

    </section>

    <div class="modal-overlay">
        <div class="modal">
            <a class="close-modal">
                <i class="material-icons">close</i>
            </a> 
            
            <a class="maximize-modal">
                <i class="material-icons">maximize </i>
                </a>

            <div class="modal-content">
                <iframe src="" frameborder="0"></iframe>
            </div>
        </div>
    </div>

    <script src="/assets/scripts.js"></script>

{% endblock %}