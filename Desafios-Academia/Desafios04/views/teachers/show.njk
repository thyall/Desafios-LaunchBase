{% extends "layout.njk" %}

{% block content %}

<div class="card">

    <section
     class="avatar"
     style="background: url({{ teacher.avatar_url }}) no-repeat center center / cover"></section>

    <section class="details">
        <h3>Detalhes</h3>

        <div class="items">
            <div>Teacher</div>
            <div>{{ teacher.name }}</div>
        </div>

        <div class="items">
            <div>Idade</div>
            <div>{{ teacher.age }}</div>
        </div>

        <div class="items">
            <div>Grau</div>
            <div>{{ teacher.select }}</div>
        </div>

        <div class="items">
            <div>Aula</div>
            <div>{{ "Presencial" if teacher.aula == "Presencial" else "remoto" }}</div>
        </div>

        <div class="items">
            <div>Acompanhamento</div>
            <div>
                {% for service in teacher.services %}
                    <span>{{ service }}</span>
                {% endfor%}
            </div>
        </div>
        
        <div class="items">
            <div>Desde</div>
            <div>{{ teacher.created_at }}</div>
        </div>

        <a href="#" class="button">Editar</a>
    </section>
</div>

{% endblock %}