{% extends "layout.njk" %}

{% block content %}

<form class="card" method="POST" action="/teachers">
    <section
     class="avatar"
     style="background: url(https://source.unsplash.com/collection/9901054/500x500) no-repeat center center / cover"></section>

    <section class="details">
        <h3>Novo Professor</h3>

        <div class="items">
            <div>Avatar URL</div>
            <div>
                <input
                 type="url"
                 name="avatar_url"
                 placeholder="http://"
                >
            </div>
        </div>

        <div class="items">
            <div>Instrutor</div>
            <div>
                <input
                 type="text"
                 name="name"
                 placeholder="Nome do professor"
                >
            </div>
        </div>

        <div class="items">
            <div>Data de nascimento</div>
            <div>
                <input
                type="date"
                name="birth">
            </div>
        </div>

        <div class = "items">
            <select name="select">
                <option value="valor1">Ensino Médio Completo</option> 
                <option value="valor2">Ensino Superior Completo</option>
                <option value="valor3">Mestrado ou Doutorado</option>
            </select>                
        <div class="items">

            <div>Tipo de aula</div>
            <div>
                <span><input type="radio" name="aula" value="Presencial">Presencial</span>
                <span><input type="radio" name="aula" value="Remoto">Remoto</span>
            </div>
        </div>

        <div class="items">
            <div>Área de atuação</div>
            <div>
                <input
                type="text" 
                name="services"
                placeholder="Separe os serviços prestados por vírgula">
            </div>
        </div>

        <button type="submit">Salvar</button>
    </section>
</form>

{% endblock %}